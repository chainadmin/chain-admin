{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "postInstall": "node eas-hooks/eas-build-post-install.cjs"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "extends": "base",
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "distribution": "internal",
      "extends": "base",
      "env": {
        "VITE_API_URL": "https://chainsoftwaregroup.com"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "extends": "base",
      "env": {
        "VITE_API_URL": "https://chainsoftwaregroup.com"
      },
      "ios": {
        "buildConfiguration": "Release",
        "resourceClass": "medium"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "resourceClass": "medium",
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "YOUR_APPLE_ID_EMAIL@example.com",
        "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      }
    }
  }
}
