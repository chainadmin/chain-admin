{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "VITE_API_URL": "https://chainsoftwaregroup.com"
      },
      "ios": {
        "buildConfiguration": "Release",
        "prebuildCommand": "mkdir -p ios/App/App.xcodeproj/xcshareddata/xcschemes && if [ ! -f ios/App/App.xcodeproj/xcshareddata/xcschemes/App.xcscheme ]; then git checkout ios/App/App.xcodeproj/xcshareddata/xcschemes/App.xcscheme || true; fi"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "VITE_API_URL": "https://chainsoftwaregroup.com"
      },
      "ios": {
        "buildConfiguration": "Release",
        "resourceClass": "medium",
        "prebuildCommand": "mkdir -p ios/App/App.xcodeproj/xcshareddata/xcschemes && if [ ! -f ios/App/App.xcodeproj/xcshareddata/xcschemes/App.xcscheme ]; then git checkout ios/App/App.xcodeproj/xcshareddata/xcschemes/App.xcscheme || true; fi"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "resourceClass": "medium",
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "YOUR_APPLE_ID_EMAIL@example.com",
        "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      }
    }
  }
}
