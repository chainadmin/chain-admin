{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./build.sh"
  },
  "deploy": {
    "startCommand": "NODE_ENV=production PORT=${PORT:-3000} node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}