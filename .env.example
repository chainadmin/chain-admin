# Database Configuration
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Replit Auth (for local development only - not needed on Vercel)
REPLIT_OPENID_CONFIGURATION_URL=
REPLIT_AUTH_CLIENT_ID=
REPLIT_AUTH_CLIENT_SECRET=

# Session Secret
SESSION_SECRET=your-random-session-secret-here

# Email Services (optional)
SENDGRID_API_KEY=
POSTMARK_SERVER_TOKEN=

# SMS Service (optional - per tenant in database)
# These are managed per tenant in the database, not as environment variables

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Node Environment
NODE_ENV=production