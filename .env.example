# Database Configuration
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# JWT Secret (for API authentication)
JWT_SECRET=your-secure-jwt-secret-here-change-in-production

# Session Secret (for development/Replit)
SESSION_SECRET=your-random-session-secret-here

# Email Services (optional)
SENDGRID_API_KEY=
POSTMARK_SERVER_TOKEN=

# SMS Service (optional - per tenant in database)
# These are managed per tenant in the database, not as environment variables

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Frontend URL (for CORS - not needed on Vercel since frontend and API are on same domain)
FRONTEND_URL=https://chainsoftwaregroup.com

# Node Environment
NODE_ENV=production